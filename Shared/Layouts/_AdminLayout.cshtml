<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Shaffans - @Page.Title</title>
        <link href="@Href("~/css/style.css")" rel="stylesheet" />
        
        <link href="@Href("~/css/AdminStyle.css")" rel="stylesheet" />
        
        @RenderSection("head", required: false)
        
    </head>
    <body>
        
        <div class="container"  id="page" style="background: url(../../ProductImages/background-texture.png) repeat scroll left top transparent; " >
            <div id="header" style="background-color: #b2cecf;" >
                <div style="float: right; background-image: url(~/ProductImages/new.png); ">
                    <div class="row">
                        <div class="span5">@MembershipHelpers.AccountSummary()</div>
                        <div class="span4">@RenderPage("~/Shared/Partials/_Search.cshtml")</div>
                    </div>
                    
                </div>
                <p class="logo"><a href="@Href("~/")"><img src="~/ProductImages/new.png" alt="Shaffans Store"></a></p>
                
            </div>
            <div id="content">
                <div id="categories">
                    
                    @RenderPage("~/Shared/Partials/_AdminMenu.cshtml")
                </div>
                <div id="main" class="container">
                    @RenderBody()
                </div>
            </div>
            <div id="footer" style="color: #006699; background-color: #b2cecf; height: 40px; font-size: medium;">
                <div class="offset1" style="text-align: center;">&copy;@DateTime.Now.Year Shaffans All rights reserved.</div>
            </div>
        </div>
    </body>
</html>